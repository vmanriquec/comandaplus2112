<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.08"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal|center_vertical"
            android:layout_weight="0.86"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.86"
                android:src="@drawable/logo2" />

            <TextView
                android:id="@+id/idproductos"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_weight="0.86"
                android:text="id"
                android:textColor="@android:color/transparent"
                android:textSize="8sp" />

            <Button
                android:id="@+id/cantidadpedidas"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_weight="0.86"
                android:background="@drawable/tabcirculoverdecara"
                android:text="0"
                android:textColor="#a31019"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/productoprecios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="false"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="precio"
            android:textAlignment="center"
            android:textColor="@color/chatotro"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.67"
            android:text="nombre producto"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productoingredientess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="4"
            android:text="ingredientes"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <View
            android:id="@+id/dividers"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="0.86"
            android:background="@color/chatotro" />

        <LinearLayout
            android:id="@+id/masmenoss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/semiTransparentWhite"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/plus_buttons"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="left"
                android:layout_weight="0.50"
                android:background="@drawable/tabcirculof"
                android:text="+"
                android:textSize="24sp" />


            <TextView
                android:id="@+id/cantidadtarjetas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.50"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/menos_buttons"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:background="@drawable/circulofondo"
                android:text="--"
                android:textColor="@color/cardview_light_background"
                android:textSize="24sp" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>