<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="8dp"
        card_view:cardMaxElevation="10dp"
        card_view:cardBackgroundColor="#fff"
        android:background="#a9a9a9"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:id="@+id/tarjetarealmdetallepedido"
        android:layout_alignParentTop="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:orientation="vertical"
                android:weightSum="1">


                <ImageView
                    android:id="@+id/productoimagen1"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="0.86"
                    android:src="@drawable/user" />

                <TextView
                    android:id="@+id/productoprecio1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignTop="@+id/view"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"


                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="12.0"
                    android:textAlignment="center"
                    android:textColor="@color/accent"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/idproducto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.86"
                    android:textColor="@android:color/transparent"
                    android:textSize="8sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="match_parent"
                android:layout_weight="0.61"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/productonombre1"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.67"
                    android:text="pay"
                    android:textColor="#605f5f"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/productoingredientes1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:maxLines="4"
                        android:text="ingredientes"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/masmenos1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/botoncajaredondeada"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/plus_button1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_weight="0.50"
                            android:background="@drawable/password" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="#000" />

                        <Button
                            android:id="@+id/menos_button1"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/myCheckBox1"
                        android:layout_width="38dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/disenocheckbox"
                        android:button="@null"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/contidadpedida1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/circulofondo"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/botonok1"
                        android:layout_width="62dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="0.09"
                        android:text="gua"
                        android:elevation="1dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/eliminar1"
                        android:layout_width="44dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="3dp"

                        android:text="eli"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>